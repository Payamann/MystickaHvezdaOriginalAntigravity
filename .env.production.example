# ============================================
# Mystická Hvězda - Production Environment
# ============================================
# Copy this file to .env and fill in all values.
# All variables marked [REQUIRED] must be set in production.

# ---- Server ----
NODE_ENV=production
PORT=3001

# ---- Authentication [REQUIRED] ----
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# ---- Supabase [REQUIRED] ----
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ---- Google Gemini AI [REQUIRED] ----
GEMINI_API_KEY=

# ---- Stripe Payments [REQUIRED] ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ---- CORS ----
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://mystickahvezda.cz

# ---- Admin ----
# Fallback admin emails (comma-separated). Prefer database role check.
ADMIN_EMAILS=
